generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trainee {
  id         String    @id @default(cuid())
  name       String
  email      String    @unique
  password   String
  phone      String
  city       String
  schoolName String
  class      String
  branch     String
  subjects   String[]
  createdAt  DateTime  @default(now())
  sessions   Session[]
  logs       Logs[]
  ratings    Ratings[] // Ratings given by this trainee
  token      Int       @default(0)
}

model Trainer {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  phone         String
  iconurl       String
  qualification String
  city          String
  subjects      String[]
  createdAt     DateTime  @default(now())
  sessions      Session[]
  logs          Logs[]
  ratings       Ratings[] // Ratings received by this trainer
}

model Session {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime
  status    String
  topic     String
  trainee   Trainee? @relation(fields: [traineeId], references: [id])
  traineeId String?

  trainer   Trainer? @relation(fields: [trainerId], references: [id])
  trainerId String?
}

model Ratings {
  id        String   @id @default(cuid()) // Unique ID for the rating
  rating    Int // Rating out of 5
  comment   String? // Optional comment provided by trainee
  createdAt DateTime @default(now())

  // Relations
  trainee   Trainee @relation(fields: [traineeId], references: [id])
  traineeId String // ID of the trainee who gave the rating

  trainer   Trainer @relation(fields: [trainerId], references: [id])
  trainerId String // ID of the trainer being rated
}

model Logs {
  id          String   @id @default(cuid()) // Add unique identifier for logs
  description String // Description of the log event
  createdAt   DateTime @default(now()) // When the log was created

  // Relationships
  trainee   Trainee? @relation(fields: [traineeId], references: [id])
  traineeId String?

  trainer   Trainer? @relation(fields: [trainerId], references: [id])
  trainerId String?
}
